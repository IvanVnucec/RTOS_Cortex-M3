{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "QEMU",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "external",
            "cwd": "${workspaceFolder}",
            "runToMain": true,
            "executable": "${workspaceFolder}/build/rtos.elf",
            "device": "STM32F103C8T6",
            "gdbTarget": ":3333",
            "svdFile": "${workspaceFolder}/stm32f103c8t6.svd",
            "armToolchainPath": "/usr/bin",
        },
        {
            "name": "Debug (OpenOCD)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
            "runToMain": true,
            "executable": "${workspaceFolder}/build/rtos.elf",
            "device": "STM32F103C8T6",
            "configFiles": [
                "interface/stlink-v2.cfg",
                "target/stm32f1x.cfg"
            ],
            "svdFile": "${workspaceFolder}/stm32f103c8t6.svd",
            "armToolchainPath": "/usr/bin"
        }
    ]
}